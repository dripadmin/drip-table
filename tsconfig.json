{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {},
    "jsx": "preserve"
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}